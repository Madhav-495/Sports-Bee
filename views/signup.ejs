        <div class="container " style="margin-top:5%;width:40%;;height:40rem;box-shadow: 5px 5px 10px #888888;">
            
                <h1 class="mb-5 " style="margin-left:33%">SIGNUP</h1>
                <form method="post" href="">
                    <div class="form-group mb-3">
                        <label for="exampleInputEmail1">Full name</label>
                        <input type="text" class="form-control-plaintext" id="exampleInputFullName" aria-describedby="emailHelp" placeholder="Name"style="border:none;border-bottom:1px solid black;outline:none;" name="name">
                        
                      </div>
                      <div class="form-group mb-3">
