    <div class="container mt-4">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Enter the player name" id="player_name" style="border-radius:25px;">
            <span class="input-group-append">
                <button class="btn btn-secondary" type="button" id="search_button">Search</button>
            </span>
        </div>
    </div>
    </div>
    <div class="container mt-3 text-center">
        <div class="row">
            <div class="col-sm">
                <img src="images/sachin.webp" alt="" class="img-fluid rounded-circle">
                <figcaption id="name"><b> Sachin tendulkar</b> </figcaption>
            </div>
            
        </div>
    </div>
    <div class="container text-center mt-3">
        <div class="col-sm ">
            <div class="container"  style="display:flex;justify-content: space-between;">
                <div class="container" style="width:491px;height:260px;">
                    <canvas id="myChart" ></canvas>
                </div>
                <div class="container" style="width:491px;height:260px">
                <canvas id="myChart2"></canvas>
            </div>
            </div>
            
        </div>
    </div>
    <div class="container mt-5 mb-5">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">feature</th>
                    <th scope="col">Test-Matches</th>
                    <th scope="col">ODI's</th>
                    <th scope="col">T20I's</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Runs</th>
                    <td id="test_runs">14000</td>
                    <td id="odi_runs">18868</td>
                    <td id="t20_runs">700</td>
                </tr>
                <tr>
                    <th scope="row">Batting-Average</th>
                    <td id="test_batting_average">42.45</td>
                    <td id="odi_batting_average">44.46</td>
                    <td id="t20_batting_average">22.5</td>
                </tr>
                <tr>
                    <th scope="row">Wickets</th>
                    <td id="test_wickets">124</td>
                    <td id="odi_wickets">157</td>
                    <td id="t20_wickets">04</td>
                </tr>
                <tr>
                    <th scope="row">Bolwing-Average</th>
                    <td id="test_bowling_average">39.8</td>
                    <td id="odi_bowling_average">27.6</td>
                    <td id="t20_bowling_average">24.5</td>
                </tr>
            </tbody>
        </table>
        

    </div>
